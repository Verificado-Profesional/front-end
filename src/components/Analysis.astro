---
import keys from '@/data/keys.json';
---

<section class='w-full flex justify-center items-center'>
  <div class='w-4/5 flex flex-col justify-between items-start'>
    <h1 class='text-3xl uppercase font-black text-[#92A7FF] mt-10 mb-10'>
      {keys.home_analysis_title}
    </h1>
    <div class='w-full grid lg:grid-cols-5 items-start mb-10 gap-8'>
      <article
        class='col-start-1 col-end-6 lg:col-end-5 flex flex-col md:flex-row justify-between min-w-64 gap-8'
      >
        <img
          src='/assets/veracity.svg'
          alt='Veracidad'
          width='100%'
          height='auto'
        />
        <div class='flex flex-col justify-center items-start w-full'>
          <h2 class='text-xl text-left font-semibold'>
            {keys.home_analysis_veracity_title}
          </h2>
          <p
            class='flex items-center justify-center w-full text-left font-extralight'
          >
            {keys.home_analysis_veracity_subtitle}
          </p>
        </div>
      </article>
      <article
        class='col-start-1 lg:col-start-2 col-end-6 flex flex-col md:flex-row-reverse justify-between min-w-64 gap-8'
      >
        <img
          src='/assets/sentiment.svg'
          alt='Sentimiento'
          width='100%'
          height='auto'
        />
        <div class='flex flex-col justify-center items-start w-full'>
          <h2 class='text-xl text-left font-semibold'>
            {keys.home_analysis_sentiment_title}
          </h2>
          <p
            class='flex items-center justify-center w-full text-left font-extralight'
          >
            {keys.home_analysis_sentiment_subtitle}
          </p>
        </div>
      </article>
    </div>
  </div>
</section>
