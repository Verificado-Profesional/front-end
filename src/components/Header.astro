---
const {pathname} = Astro.props;
---

<header
  class='w-full h-20 bg-[#04001F]/50 backdrop-blur-[2px] flex justify-center fixed inset-0'
>
  <div class='w-4/5 flex flex-row justify-between items-center'>
    <img src='/FactifyLogo.svg' alt='Factify' width='60px' height='60px' />
    <nav>
      <ul class='flex flex-row gap-16'>
        <li
          class:list={['py-1 w-32 text-center', { selected: pathname === '/' }]}
        >
          <a href='/'>Inicio</a>
        </li>
        <li
          class:list={[
            'py-1 w-32 text-center',
            { selected: pathname === '/analizar' },
          ]}
        >
          <a href='/analizar'>Analizar</a>
        </li>
        <li
          class:list={[
            'py-1 w-32 text-center',
            { selected: pathname === '/estadisticas' },
          ]}
        >
          <a href='/estadisticas'>Estad√≠sticas</a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<style>
  .selected {
    background-color: white;
    color: var(--color-primary);
    border-radius: 25px;
  }
</style>
