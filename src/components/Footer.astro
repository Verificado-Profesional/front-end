---
import Copyright from './icons/CopyrightIcon.astro';
import keys from '@/data/keys.json';
import EmailIcon from './icons/EmailIcon';

const { pathname } = Astro.props;
---

<footer
  class='w-full bg-[#04001F] flex flex-col items-center justify-center border-t'
>
  <span
    class='w-4/5 flex flex-row justify-center items-center gap-5 border-b border-white text-sm md:text-base lg:text-lg transition-all duration-300 ease-in-out'
  >
    <a
      class='cursor-pointer flex flex-row justify-center items-center gap-5 p-5'
      href='mailto:profesional.verificado@gmail.com?Subject=Estoy%20interesado/a%20en%20Factify!'
      target='_blank'
      rel='noopener noreferrer'
    >
      <EmailIcon className='w-6' />
      profesional.verificado@gmail.com
    </a>
  </span>
  <div
    class='w-4/5 py-10 flex flex-col md:flex-row justify-between md:items-center'
  >
    <section
      class='flex flex-row md:border-r border-b md:border-b-0 gap-10 md:justify-start justify-between pb-5 md:pb-0 mb-5 md:mb-0'
    >
      <a href='/' class='rounded-full'>
        <img
          src='/FactifyLogo.svg'
          alt='Factify'
          width='120px'
          height='120px'
        />
      </a>
      <nav>
        <ul class='flex flex-col gap-4'>
          <li
            class:list={['py-1 w-32', { 'footer-selected': pathname === '/' }]}
          >
            <a href='/'>{keys.section_inicio}</a>
          </li>
          <li
            class:list={[
              'py-1 w-32',
              { 'footer-selected': pathname === '/analizar' },
            ]}
          >
            <a href='/analizar'>{keys.section_analizar}</a>
          </li>
          <li
            class:list={[
              'py-1 w-32',
              { 'footer-selected': pathname === '/tendencias' },
            ]}
          >
            <a href='/tendencias'>{keys.section_tendencias}</a>
          </li>
          <li
            class:list={[
              'py-1 w-32',
              { 'footer-selected': pathname === '/informate' },
            ]}
          >
            <a href='/informate'>{keys.section_informate}</a>
          </li>
        </ul>
      </nav>
    </section>
    <section
      class='flex flex-row md:text-2xl lg:text-4xl justify-center items-center gap-5 transition-all duration-300 ease-in-out'
    >
      <picture class='md:w-9 md:h-9 w-5 h-5'>
        <Copyright />
      </picture>
      <h1>{keys.footer_copyright_text}</h1>
    </section>
  </div>
</footer>

<style>
  .footer-selected {
    text-decoration: underline;
  }
</style>
