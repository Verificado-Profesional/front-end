---
interface Props {
  title: string;
  type: 'primary' | 'secondary';
  href: string;
}

const { title, type, href }: Props = Astro.props;
---

<!-- , {'': type === 'primary', '': type === 'secondary'} -->
<a
  href={href}
  class='px-4 py-2 border-2 rounded-3xl font-semibold border-white min-w-40 hover:bg-white hover:text-[#04001F] flex justify-center items-center'
>
  {title}
</a>
